<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="background" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="main.java.cau.project.end.EndController">

    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <children>

        <Label fx:id="lbl_gameover" alignment="CENTER" text="Game Over!!" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font>
                <Font size="75.0"/>
            </font>
        </Label>
        <Label fx:id="lbl_restart" alignment="CENTER" text="Press Enter to play again" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>


        <Label fx:id="lbl_endscore" text="Label" GridPane.columnIndex="1" GridPane.halignment="CENTER"
               GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <font>
                <Font size="75.0"/>
            </font>
        </Label>
        <Button fx:id="btn_restart" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onButtonClicked"
                text="Press to Restart" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3"
                GridPane.valignment="CENTER" focusTraversable="false">
            <font>
                <Font size="24.0"/>
            </font>
        </Button>
    </children>

</GridPane>
